* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Poppins', sans-serif;
}

body {
  font-family: "Poppins", sans-serif;
}

.container {
  max-width: 1300px;
  margin: auto;
  padding-left: 25px;
  padding-right: 25px;
}

.orderFormContainer{
	width:100%;
	height:100vh;
	display:flex;
	justify-content:center;
	align-items:center;
	
}
h1{
	font-weight:600;
	margin-bottom:20px;
	font-size:22px;
	color:#333;
}

#orderForm2{
	flex-basis:45%;
	height:inherit;
	background-color:#f5f5f5;
	border-left:1px solid #ccc;
}


#orderForm {
  flex-basis:55%;
  display:flex;
  padding: 20px;
  background-color: #fff;
  }
#part1{
	flex-basis:65%;
	
}
#part2{
	flex-basis:20%;
}




#orderForm h3 {
  margin: 0 0 10px;
  font-weight:500;
  font-size:17px;
  margin-bottom:30px;
}

#orderForm input[type="text"],
#orderForm button[type="submit"] {
  display: block;
  width: 100%;
  padding: 15px;
  margin-bottom: 15px;
  border-radius:5px;
  font-size:13px;
}
#orderForm h5{
	font-size:17px;
	font-weight:500;
	font-size:18px;
	margin-top:20px;
	margin-bottom:10px;
	
}
#orderForm select{
	padding:10px;
}
#orderForm input[type="text"] {
  border: 1px solid #ccc;
}

#orderForm button[type="submit"] {
  background-color: #1773b0;
  color: #fff8f0;
  border: none;
  width:35%;
  align-items:left;
  margin-left:65%;
}

#orderForm button[type="submit"]:hover {
  background-color: #45a049;
}

.fa-times{
	position:absolute;
	top:23px;
	right:21px;
	color:red;
	cursor:pointer;
}
@media (max-width:400px){    
	#orderForm {
    left:10%;
    top:12%;
    width:300px;
  }
}
@media (max-width:700px){    
	#orderForm {
    left:10%;
    top:12%;
    width:300px;
  }
}




#orderFormImage{
	width:100%;
	height:100vh;
	display:flex;
	justify-content:center;
	align-items:center;
	margin-top:-20px;
}
.orderFormimg{
	width:400px;
}